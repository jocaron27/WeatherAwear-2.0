{
  "extends": "../tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES6",
    "noResolve": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": false,    
    "listFiles": false,
    "declaration": false,
    "moduleResolution": "node",
    "isolatedModules": false,
    "downlevelIteration": true,
    "typeRoots": ["../node_modules/@types"],
    "types": [
      "node",
      "express",
      "googlemaps"
    ],
    "strict": false
  },
  "exclude": [
    "../node_modules"
  ]
}
